root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false  # for mermaid

[.gitmodules]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{mk,go}]
indent_style = tab
indent_size = 4

[go.*]
indent_style = tab
indent_size = 4

[Caddyfile]
indent_size = 4
